<%= form_with(model: [@single_room, Message.new], local: false, data: { controller: "reset-form", action: "turbo:submit-end->reset-form#reset" }) do |form| %>
  <div class="form-group">
    <%= form.label :content, "Message" %>
    <%= form.text_area :content, class: "form-control", rows: 3, placeholder: "Type your message here..." %>
  </div>
  <div class="form-group">
    <%= form.submit "Send", class: "btn btn-primary" %>
  </div>
<% end %>